
<div class='container'>
<%= link_to "Back to Projects List", projects_path, class: 'btn btn-info btn-lg', id: "project-back" %>
	<div class='row project-home'>
		<div class='col-sm-9 col-xs-12'>
			<div class='row'>
				<div class='col-sm-12'>
					<%= image_tag @project.screenshot_url, class: 'img-responsive', style: "width:100%;" %>
				</div>
			</div>
			<div class='row'>
				<div class='col-sm-12 project-content'>
					<div class='row'>
						<h3 class='text-center'><%= link_to @project.name, @project.url, target: "_blank" %></h3>
						<div class='col-sm-12'>
							<div class='row'>
								<div class='col-sm-3 col-xs-5'><br>
									<h3>About <%= @project.name %></h3>
								</div>
								<div class='col-sm-9 col-xs-7'><br>
									<p><%= @project.description %></p>
								</div>
							</div>
							<div class='row'>
								<div class='col-sm-3 col-xs-5'>
									<h3>Built With:</h3>
								</div>
								<div class='col-sm-9 col-xs-7'><br>
									<kbd><%= @project.builtwith %></kbd>
								</div>
							</div>
							<div class='row'>
								<div class='col-sm-3 col-xs-5'>
									<h3>Project Link:</h3>
								</div>
								<div class='col-sm-9 col-xs-7'><br>
									<p><%= link_to @project.url, @project.url, target: "_blank" %></p>
								</div>
							</div>
							<!-- <div class='row'>
								<%# if @project.github %>
									<div class='col-sm-3 col-xs-5'>
										<h3>Github Link:</h3>
									</div>
									<div class='col-sm-9 col-xs-7'><br>
										<p><%#= link_to @project.github, @project.github, target: "_blank" %></p>
									</div>
								<%# end %>
							</div> -->
							<div class='row'>
								<div class='col-sm-3 col-xs-5'>
									
								</div>
								<div class='col-sm-9 col-xs-7'><br>
									 <% if current_developer_admin? %>
								          <%= link_to "Edit", edit_project_path(@project), class: 'btn btn-info' %>
								           <%= link_to "Delete", project_path(@project), method: :delete, data: {confirm: 'Are you sure?' }, class: 'btn btn-danger' %>
								      <% end %>
								</div>
							</div>
						</div>
					</div>
				</div>
			
			</div>
		</div>
		<div class='col-sm-3'>
			<div class='row'>
				<div class='col-sm-12 hidden-xs'>
					<h2 class='text-center'>Related Projects</h2><hr>
					<% @projects.each_slice(1) do |project| %>
						<% project.each do |project| %>
							<h4 class='text-center'><%= link_to project.name, project %></h4>
							<%= link_to project do %>
								<%= image_tag project.screenshot_url, class: 'img-responsive', style: "width:100%;height:250px;" %>
							<% end %>
						<% end %>
					<% end %>
				</div>
			</div><br>
			
			<div class='row'>
				<div class='col-xs-12'>
					<h3>Tell us what you think about <%= @project.name %> </h3><hr>
					<%= render partial: 'comments/form' %>
						<%if @comments.any? %>
							<div class='row'>
								<h3 class='text-center'><%= @project.name %> Reviews</h3><hr>
								<div class='project-comment'>
									 <% @comments.each do |c| %>
										<div class='row'>
											<div class='col-xs-4'>
												<%= profile_image_for c, class: 'img-responsive', style: 'width:100%;height:50px;border-radius:50px;' %>
											</div>
											<div class='col-xs-8'>
												<%= c.name %><br>
												<%= c.remark %>
											</div>
										</div><hr>
									<% end %>
								</div>
							</div>
						<% end %>
				</div>
			</div>
			
			
		</div>
	</div>
</div>